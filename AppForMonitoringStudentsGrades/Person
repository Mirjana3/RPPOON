using System;
using System.Collections.Generic;
using System.Text;

namespace AppForStudentsGrades
{
    public abstract class Person
    {
        private string Name;
        private string Surname;
        private int ID;

        public string name
        {
            get { return Name; }
            set { Name = value; }
        }

        public string surname
        {
            get { return Surname; }
            set { Surname = value; }
        }

        public int Id
        {
            get { return ID; }
            set { ID = value; }
        }

        public Person(string name, string surname, int id)
        {
            Name = name;
            Surname = surname;
            ID = id;
        }
    }
}
